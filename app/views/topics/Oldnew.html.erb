<h1>Idol fan</h1>
<h3>新規トピック投稿</h3>
<%= form_with(model: @topic, local: true) do |f| %>

  
  <div class="field">
    <%= f.label :group_name %>
    <%= f.text_field :group_name, :size => 30 %>
  </div>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, :size => 30 %>
  </div>

  <div class="field">
    <%= f.label :content  %>
    <%= f.text_area :content, :size => "30x2" %>
  </div>

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  
  <div class="field">
    <%= f.label :youtube_url %>
    <%= f.text_field :youtube_url, :size => 140 %>
  </div>

  <%= f.submit "投稿する" %>

  <% end %>

  <%= link_to "投稿一覧に戻る", topics_path %>